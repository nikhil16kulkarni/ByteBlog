

<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

    <p>
        <%= f.label :name %><br>
        <%= f.text_field(:name, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.label :body %><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-default'}) %><br>
    </p>
<% end %>
