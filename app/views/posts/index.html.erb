<h1>Welcome to ByteBlog!</h1>
<%# <p>Find me in app/views/posts/index.html.erb</p> %>


<%# <%= only when you're expecting an output%>

<% @posts.each do |post| %>

    <div class="well" style="background-color: #f5f5f5; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">

        <h3><%= post.title %></h3>
        <p><%= post.body %></p>
        <%= link_to "Go to post", post_path(post), style: 'background-color: grey; color: #333; padding: 5px 10px; text-decoration: none; border: 1px solid #ccc; border-radius: 5px;' %>

    </div>
<% end %>
